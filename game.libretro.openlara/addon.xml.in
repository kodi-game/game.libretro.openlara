<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.openlara"
		name="Tomb Raider (OpenLara)"
		version="1.0.0.22"
		provider-name="XProger">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>phd|psx|tr2|sat</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>true</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>2-clause BSD</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.openlara</source>
		<assets>
			<icon>resources/icon.png</icon>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
		</assets>
		<summary lang="da_DK">Tomb Raider (OpenLara)</summary>
		<summary lang="en_GB">Tomb Raider (OpenLara)</summary>
		<summary lang="es_ES">Tomb Raider (OpenLara)</summary>
		<summary lang="it_IT">Tomb Raider (OpenLara)</summary>
		<summary lang="sv_SE">Tomb Raider (OpenLara)</summary>
		<summary lang="zh_CN">古墓丽影（OpenLara）</summary>
		<description lang="da_DK">OpenLara er en klassisk Tomb Raider open source-motor. Det var inspireret af OpenTomb-projektet.</description>
		<description lang="en_GB">OpenLara is a Classic Tomb Raider open-source engine. It was inspired by the OpenTomb project.</description>
		<description lang="es_ES">OpenLara es un motor de código abierto del clásico Tomb Raider. Está inspirado en el proyecto OpenTomb.</description>
		<description lang="it_IT">OpenLara è un motore open source di Tomb Raider classico. È stato ispirato dal progetto OpenTomb.</description>
